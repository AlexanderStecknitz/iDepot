<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="004-create-table" author="Alexander Stecknitz">

        <createTable tableName="user">
            <column name="id" type="number">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text" />
            <column name="last_name" type="text" />
            <column name="email" type="text">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="password" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

    <changeSet id="004-insert-data" author="Alexander Stecknitz">
        <insert tableName="user">
            <column name="id" value="1" />
            <column name="first_name" value="admin" />
            <column name="last_name" value="admin" />
            <column name="email" value="admin" />
            <column name="password" value="$2a$10$11fDeJ5uaDqTv35jmk9vGeSVBIZkUer8d8JWaamlfnBZrCaRV8Ld2" />
        </insert>
    </changeSet>

</databaseChangeLog>